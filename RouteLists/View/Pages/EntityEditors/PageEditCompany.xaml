<local:EntityPage x:Class="RouteLists.View.Pages.EntityEditors.PageEditCompany"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:local="clr-namespace:RouteLists.View.Pages.EntityEditors"
                  mc:Ignorable="d" 
                  Background="{StaticResource addBackBrush}"
                  Title="Добавление компании">

    <StackPanel Orientation="Vertical">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition MaxWidth="450" Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Наименование:"
                   Grid.Column="0"
                   Margin="10 5"/>

            <TextBox x:Name="txtBoxTitle"
                     Grid.Column="2"
                     Margin="10 5"
                     MaxLength="150"
                     Width="auto"/>
        </Grid>
    </StackPanel>
</local:EntityPage>
